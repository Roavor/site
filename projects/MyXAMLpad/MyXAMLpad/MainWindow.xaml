<Window x:Class="MyXAMLpad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My castom XAML editor" Height="338" Width="1041"
        WindowStartupLocation="CenterScreen" Closed="Window_Closed" Loaded="Window_Loaded">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Top" Name="btnVievXaml" Width="100" Height="40" Content="btnVievXaml" Click="btnVievXaml_Click"/>
        <TextBox AcceptsReturn="True" Name="txtXamldata"
                 FontSize="14" Background="Yellow" VerticalScrollBarVisibility="Auto" 
                 AcceptsTab="True"/>
    </DockPanel>
</Window>
